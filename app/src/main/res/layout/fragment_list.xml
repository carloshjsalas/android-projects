<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.android.project.viewmodel.ArticleViewModel" />
    </data>

    <FrameLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.android.project.com.android.project.view.ListFragment">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/list_articles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:orderAscendent="@{viewModel.orderAscendent}"
            app:showImagesInList="@{viewModel.articles}" />

    </FrameLayout>

</layout>
